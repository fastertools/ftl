{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "lib": ["ES2020", "WebWorker"],
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"]
}
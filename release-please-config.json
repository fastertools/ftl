{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "bootstrap-sha": "cba52c6abcc6929b16d495ceb74858d2f3145f60",
  "last-release-sha": "cba52c6abcc6929b16d495ceb74858d2f3145f60",
  "release-type": "simple",
  "include-v-in-tag": true,
  "tag-separator": "-",
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "Bug Fixes",
      "hidden": false
    },
    {
      "type": "perf",
      "section": "Performance Improvements",
      "hidden": false
    },
    {
      "type": "refactor",
      "section": "Code Refactoring",
      "hidden": false
    },
    {
      "type": "deps",
      "section": "Dependencies",
      "hidden": false
    },
    {
      "type": "docs",
      "section": "Documentation",
      "hidden": false
    },
    {
      "type": "test",
      "section": "Tests",
      "hidden": false
    },
    {
      "type": "build",
      "section": "Build System",
      "hidden": false
    },
    {
      "type": "ci",
      "section": "Continuous Integration",
      "hidden": false
    },
    {
      "type": "chore",
      "section": "Miscellaneous Chores",
      "hidden": true
    },
    {
      "type": "style",
      "section": "Styles",
      "hidden": true
    },
    {
      "type": "revert",
      "section": "Reverts",
      "hidden": false
    }
  ],
  "changelog-type": "github",
  "exclude-paths": [
    "components/*/tests/**",
    "**/tests/Cargo.toml"
  ],
  "plugins": [
    {
      "type": "node-workspace",
      "merge": false,
      "updatePeerDependencies": true,
      "considerAllArtifacts": false
    },
    {
      "type": "linked-versions",
      "groupName": "sdk-core",
      "components": [
        "ftl-sdk-go",
        "ftl-sdk-rust",
        "ftl-sdk-python",
        "ftl-sdk-typescript"
      ],
      "merge": false
    }
  ],
  "packages": {
    ".": {
      "release-type": "simple",
      "component": "",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": false,
      "package-name": "ftl"
    },
    "cmd/ftl": {
      "release-type": "go",
      "component": "cli",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": true,
      "tag-separator": "-",
      "package-name": "ftl",
      "extra-files": [
        {
          "type": "generic",
          "path": "install.sh",
          "glob": "**FTL_VERSION=*"
        }
      ]
    },
    "sdk/go": {
      "release-type": "go",
      "component": "sdk-go",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": true,
      "tag-separator": "-",
      "package-name": "ftl-sdk-go",
      "extra-files": [
        {
          "type": "generic",
          "path": "sdk/go/README.md"
        }
      ]
    },
    "sdk": {
      "release-type": "rust",
      "component": "sdk-rust",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": true,
      "tag-separator": "-",
      "package-name": "ftl-sdk",
      "bootstrap-sha": "162b1781c1e9ff7accc1369177c83a02fb174dbe",
      "last-release-sha": "162b1781c1e9ff7accc1369177c83a02fb174dbe",
      "extra-files": [
        {
          "type": "toml",
          "path": "sdk/Cargo.toml",
          "jsonpath": "$.workspace.package.version"
        },
        {
          "type": "toml",
          "path": "sdk/rust/Cargo.toml",
          "jsonpath": "$.dependencies.ftl-sdk-macros.version"
        }
      ]
    },
    "sdk/python": {
      "release-type": "python",
      "component": "sdk-python",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": true,
      "tag-separator": "-",
      "package-name": "ftl-sdk",
      "extra-files": []
    },
    "sdk/typescript": {
      "release-type": "node",
      "component": "sdk-typescript",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": true,
      "tag-separator": "-",
      "package-name": "@ftl/sdk",
      "extra-files": []
    },
    "components": {
      "release-type": "rust",
      "component": "components",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": true,
      "tag-separator": "-",
      "package-name": "ftl-components",
      "bootstrap-sha": "991bc96311be7c205bcc1acc9f697f4948a1982f",
      "last-release-sha": "991bc96311be7c205bcc1acc9f697f4948a1982f",
      "extra-files": [
        {
          "type": "toml",
          "path": "components/Cargo.toml",
          "jsonpath": "$.workspace.package.version"
        },
        {
          "type": "toml",
          "path": "components/mcp-gateway/spin.toml",
          "jsonpath": "$.package.version"
        },
        {
          "type": "toml",
          "path": "components/mcp-authorizer/spin.toml",
          "jsonpath": "$.package.version"
        }
      ]
    }
  },
  "group-pull-request-title-pattern": "chore${scope}: release ${component} v${version}",
  "pull-request-title-pattern": "chore${scope}: release ${component} v${version}",
  "pull-request-header": ":rocket: Release PR\n\nThis PR was generated by [release-please](https://github.com/googleapis/release-please).",
  "pull-request-footer": "\n---\n\n:warning: **Do not manually edit this PR**. Any manual changes will be overwritten by release-please.\n\nTo make changes, commit to `main` with conventional commit messages.",
  "separate-pull-requests": true,
  "sequential-calls": true,
  "signoff": "FTL Release Bot <releases@fastertools.ai>",
  "include-component-in-tag": true,
  "always-link-local": true,
  "group-priority": [
    {
      "priority": 1000,
      "groups": [
        "ftl-sdk-rust",
        "ftl-sdk-go",
        "ftl-sdk-python",
        "ftl-sdk-typescript"
      ]
    },
    {
      "priority": 900,
      "groups": [
        "ftl"
      ]
    },
    {
      "priority": 800,
      "groups": [
        "mcp-gateway",
        "mcp-authorizer"
      ]
    }
  ],
  "release-search-depth": 100,
  "commit-search-depth": 500,
  "label": "autorelease: pending",
  "release-label": "autorelease: tagged",
  "draft": false,
  "draft-pull-request": false
}